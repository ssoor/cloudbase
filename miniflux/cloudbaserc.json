{
    "version": "2.0",
    "envId": "{{env.ENV_ID}}",
    "framework": {
        "name": "miniflux",
        "plugins": {
            "client": {
                "use": "@cloudbase/framework-plugin-container",
                "inputs": {
                    "isPublic": true,
                    "serviceName": "miniflux",
                    "servicePath": "/miniflux",
                    "uploadType": "image",
                    "containerPort": 8080,
                    "imageInfo": {
                        "imageUrl": "miniflux/miniflux:2.0.28"
                    },
                    "envVariables": {
                        "DATABASE_URL": "{{env.DATABASE_URL}}",
                        "CREATE_ADMIN": "1",
                        "RUN_MIGRATIONS": "1",
                        "ADMIN_USERNAME": "core",
                        "ADMIN_PASSWORD": "Core.123"
                    },
                    "volumeMounts": {}
                }
            }
        },
        "requirement": {
            "addons": []
        }
    }
}